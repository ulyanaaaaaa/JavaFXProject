<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="212.0" prefWidth="303.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kursovoi2.client.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="Sign In" />
      <JFXTextField fx:id="login" promptText="Login" />
      <JFXPasswordField fx:id="password" promptText="Password" />
      <HBox alignment="CENTER" prefHeight="0.0" prefWidth="200.0" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <JFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#LoginAction" text="Sign in" />
            <JFXButton mnemonicParsing="false" onAction="#RegisterAction" text="Sign up" />
         </children>
      </HBox>
   </children>
</VBox>
